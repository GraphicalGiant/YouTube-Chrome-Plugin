

{
  "manifest_version": 3,
  "name": "YouTube Chatbot",
  "version": "1.0",
  "description": "Ask questions about the current YouTube video.",
  "permissions": ["tabs", "scripting", "activeTab"],
  "host_permissions": ["*://www.youtube.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}

